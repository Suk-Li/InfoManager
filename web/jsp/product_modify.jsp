<%@ page language="java" contentType="text/html; charset=UTF-8"         pageEncoding="UTF-8" %><%    pageContext.setAttribute("basePath", request.getContextPath() + "/");%><%@ page import="java.util.*,com.suke.entity.*,com.suke.common.Pager" %><html><head>    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">    <link href="bootstrap/css/bootstrap.min.css" rel="stylesheet">    <script src="jquery/jquery-1.9.1.min.js"></script>    <script src="bootstrap/js/bootstrap.min.js"></script>    <title>产品管理</title></head><body><div class="container-fluid"     style="padding-left: 0px; padding-right: 0px">    <!-- 顶部Logo定义开始 -->    <div class="row-fluid">        <jsp:include page="/jsp/north.jsp" flush="true"/>    </div>    <!-- 顶部Logo定义结束 -->    <div class="row-fluid">        <!-- 左边导航条定义开始  -->        <jsp:include page="/jsp/left.jsp" flush="true"/>        <!-- 左边导航条定义结束-->        <!-- 内容  -->        <div class="col-md-10" style="margin-top: 20px">            <%                Product p = (Product) request.getAttribute("product");            %>            <div class="row-fluid">                <div class="col-md-6 column">                    <form role="form" name="updateform" method="post" enctype="multipart/form-data"                          action="${basePath}UpdateProductSubmitServlet.do">                        <input type="hidden" name="pid" value="<%= p.getPid()%>"/>                        <div class="form-group">                            <label for="name">名称</label><input type="text" class="form-control" id="name"                                                               name="name" value="<%= p.getName()%>"/>                        </div>                        <div class="form-group">                            <label for="note">描述</label><input type="text" class="form-control" id="note"                                                               name="note" value="<%= p.getNote()%>"/>                        </div>                        <div class="form-group">                            <label for="price">价格</label><input type="number" class="form-control" id="price"                                                                name="price" value="<%= p.getPrice()%>"/>                        </div>                        <div class="form-group">                            <label for="amount">库存</label><input type="number" min="0" class="form-control"                                                                 id="amount" name="amount"                                                                 value="<%= p.getAmount()%>"/>                        </div>                        <div class="form-group">                            <label for="exampleInputFile">图片</label><br/>                            <!-- 判断是否有图片，没有就显示默认图片 -->                            <img src="pic/<%= p.getPic()==null?"default.jpg":p.getPic() %>" width=100px height=100px>                        </div>                        <div class="form-group">                            <input type="hidden" name="pic" value="<%= p.getPic()%>"/>                            <label for="exampleInputFile">产品图片</label><input type="file" id="exampleInputFile"                                                                             name="newpic"/>                        </div>                        <button type="submit" class="btn btn-default">确定修改</button>                    </form>                </div>            </div>        </div>        <!-- 内容  -->    </div></div></body></html>